{
  "name": "@generatedata/server",
  "description": "Server-side code for generatedata app",
  "private": true,
  "scripts": {
    "build": "tsc",
    "clean": "npx rimraf dist",
    "dev": "COMPOSE_INTERACTIVE_NO_CLI=1 COMPOSE_HTTP_TIMEOUT=150 docker compose -f ./docker-compose.yml up",
    "generate-schema": "graphql-codegen --config src/codegen.ts",
    "purge": "npx rimraf node_modules dist .turbo",
    "run-server": "nodemon ./dist/app.js",
    "run-server:debug": "nodemon --exec node --trace-warnings ./dist/app.js",
    "startServer": "run-server",
    "start": "run-s build run-server",
    "startNodeDevServer": "npm run start",
    "startDevServer": "COMPOSE_HTTP_TIMEOUT=150 docker compose -f ./docker-compose.yml up",
    "startAndBuildDevServer": "COMPOSE_HTTP_TIMEOUT=150 docker compose -f . up --build",
    "stopDevServer": "docker compose -f . down"
  },
  "dependencies": {
    "@apollo/server": "catalog:",
    "@as-integrations/express5": "catalog:",
    "@generatedata/config": "workspace:*",
    "@generatedata/i18n-core": "workspace:*",
    "@generatedata/utils": "workspace:*",
    "bcryptjs": "catalog:",
    "codemirror": "catalog:",
    "cookie-parser": "catalog:",
    "cors": "catalog:",
    "date-fns": "catalog:",
    "express": "catalog:",
    "google-auth-library": "catalog:",
    "graphql": "catalog:",
    "jsonwebtoken": "catalog:",
    "mysql2": "catalog:",
    "nanoid": "catalog:",
    "nodemailer": "catalog:",
    "nodemon": "catalog:",
    "sequelize": "catalog:"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "catalog:",
    "@eddeee888/gcg-typescript-resolver-files": "catalog:",
    "@rollup/plugin-commonjs": "catalog:",
    "@rollup/plugin-node-resolve": "catalog:",
    "@rollup/plugin-typescript": "catalog:",
    "@types/cookie-parser": "catalog:",
    "@types/cors": "catalog:",
    "@types/express": "catalog:",
    "@types/jsonwebtoken": "catalog:",
    "@types/nanoid": "catalog:",
    "@types/nodemailer": "catalog:",
    "dotenv": "catalog:",
    "graphql-scalars": "catalog:",
    "npm-run-all": "catalog:",
    "rimraf": "catalog:",
    "rollup": "catalog:",
    "typescript": "catalog:"
  },
  "exports": {
    ".": {
      "default": "./src/schema/types.generated.ts"
    }
  }
}
