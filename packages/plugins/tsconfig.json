{
  "compilerOptions": {
    "lib": ["es6", "dom", "esnext", "webworker"],
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "declaration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "module": "es2015",
    "target": "es5",
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "~types/*": ["types/*"]
    }
  },
  "include": ["src", "types"],
  "exclude": ["node_modules"]
}
