{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "declaration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "module": "node16",
    "target": "es5",
    "jsx": "react-jsx",
    "baseUrl": "./"
  },
  "include": ["src", "types"],
  "exclude": ["node_modules"]
}
