{
  "name": "@generatedata/config",
  "version": "1.0.0",
  "type": "module",
  "description": "This package contains the settings for your generatedata installation.",
  "scripts": {
    "build:esm": "tsc",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:database-config": "node ./build/build-db.js",
    "build:docker-files": "node ./build/build-docker-files.js",
    "build": "run-s confirm-setup build:esm build:cjs build:database-config",
    "clean": "npx rimraf dist",
    "create-database-sql": "node build/generate-create-database-sql.js",
    "purge": "npx rimraf node_modules dist .turbo",
    "confirm-setup": "node ./scripts/confirm-setup.js"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "bcryptjs": "^3.0.3",
    "date-fns": "^2.17.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "typescript": "5.9.3"
  },
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    },
    "./constants": {
      "types": "./dist/esm/constants.d.ts",
      "require": "./dist/cjs/constants.js",
      "default": "./dist/esm/constants.js"
    },
    "./clientConfig": {
      "types": "./dist/esm/client.config.d.ts",
      "require": "./dist/cjs/client.config.js",
      "default": "./dist/esm/client.config.js"
    },
    "./serverConfig": {
      "types": "./dist/esm/server.config.d.ts",
      "require": "./dist/cjs/server.config.js",
      "default": "./dist/esm/server.config.js"
    }
  }
}
