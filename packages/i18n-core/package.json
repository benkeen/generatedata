{
  "name": "@generatedata/i18n-core",
  "description": "Contains the core localization files for generatedata.",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "npm run validateI18nFiles",
    "validateI18nFiles": "validate-i18n-files --folder ./locales",
    "sortI18nFiles": "sort-i18n-files --folder ./locales",
    "purge": "npx rimraf .turbo"
  },
  "exports": {
    ".": "./locales/en.json",
    "./ar": "./locales/ar.json",
    "./de": "./locales/de.json",
    "./en": "./locales/en.json",
    "./es": "./locales/es.json",
    "./fr": "./locales/fr.json",
    "./hi": "./locales/hi.json",
    "./ja": "./locales/ja.json",
    "./nl": "./locales/nl.json",
    "./pt": "./locales/pt.json",
    "./ru": "./locales/ru.json",
    "./ta": "./locales/ta.json",
    "./zh": "./locales/zh.json"
  },
  "devDependencies": {
    "@generatedata/tools": "workspace:*",
    "npm-run-all": "catalog:",
    "rimraf": "catalog:"
  }
}
