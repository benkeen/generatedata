{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "declaration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "@generatedata/utils": ["../utils/src/index.ts"],
      "@generatedata/utils/*": ["../utils/src/*"],
      "@generatedata/config/*": ["../config/src/*"],
      "@generatedata/i18n": ["../i18n/locales/en.json"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
