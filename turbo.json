{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "lib/**", "build/**"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "dependsOn": ["^clean"],
      "cache": false
    },
    "purge": {
      "dependsOn": ["^purge"],
      "cache": false
    },
    "dev": {
      "dependsOn": [],
      "persistent": true,
      "cache": false
    }
  }
}
