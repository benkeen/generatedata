{
  "compilerOptions": {
    "lib": ["es6", "dom", "esnext", "webworker"],
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "bundler",
    "preserveSymlinks": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "declaration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "module": "es2022",
    "target": "es6",
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
